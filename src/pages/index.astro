---
import { SITE_TITLE, GIT_REPO } from '../site_config';
import { Code } from 'astro/components'
import Layout from '../layouts/Base.astro';

const CODE = `# Demo Info
some command
`
---

<Layout title="Manual">
	<main>
    <div class="max-w-6xl mx-auto dark:text-white md:py-32 md:flex">
      <div class="p-8 md:w-1/2">
        <h1 class="text-6xl font-bold my-4">{SITE_TITLE}</h1>
        <p class="text-2xl my-8">
          Build <b class="text-green-600 dark:text-green-400">robust</b>, <b class="text-green-600 dark:text-green-400">modern</b> documentation sites for SBFN theme.
        </p>
        <a href=`${GIT_REPO}/docs/get-started/introduction` class="inline-block bg-green-700 hover:bg-green-800 text-white text-lg font-bold py-2 px-4 rounded">
          GET STARTED
        </a>
      </div>
      <div class="w-full p-8 md:w-1/2 [&_pre]:p-4 [&_pre]:rounded-2xl [&_pre]:shadow-xl [&_pre]:border-2 [&_pre]:border-green-500">
        <Code code={CODE} lang="sh"/>
      </div>
    </div>

    <div class="bg-green-700 dark:bg-zinc-800"></div>
	</main>
</Layout>
